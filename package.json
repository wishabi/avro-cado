{
  "name": "@flipp/sr-enc-dec",
  "version": "0.0.1",
  "description": "Flipp Avro Encoder Decoder",
  "main": "release/index.js",
  "typings": "release/index",
  "author": "Petre Neytchev",
  "scripts": {
    "test": "jest",
    "package": "(REL_DIR='./release/'; git checkout HEAD -- ${REL_DIR} && git rm -rf ${REL_DIR} && tsc && git add ${REL_DIR})",
    "build": "(REL_DIR='./release/'; tsc)"
  },
  "devDependencies": {
    "@types/node": "7.0.53",
    "@types/jest": "^23.3.1",
    "jest": "^23.5.0",
    "ts-jest": "^23.1.4",
    "typescript": "3.0.1"
  },
  "dependencies": {
    "avsc": "5.0.6",
    "axios": "^0.18.0"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com:wishabi/Flipp-sr-enc-dec.git"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "ts/**/*.{ts}"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/tests/.*|\\.test)\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  },
  "unmockedModulePathPatterns": [
    "<rootDir>/node_modules"
  ],
  "moduleDirectories": [
    "<rootDir>/node_modules",
    "<rootDir>/ts"
  ]
}
