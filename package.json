{
  "name": "@flipp/sr-enc-dec",
  "version": "0.0.1",
  "description": "Flipp Avro Encoder Decoder",
  "main": "release/index.js",
  "typings": "release/index",
  "author": "Petre Neytchev",
  "scripts": {
    "test": "jest",
    "package": "(REL_DIR='./release/'; git checkout HEAD -- ${REL_DIR} && git rm -rf ${REL_DIR} && tsc && git add ${REL_DIR})",
    "lint": "mkdir -p reports && tslint --force --out reports/tslint-report.txt --format prose 'src/**/*.ts'",
    "build": "(REL_DIR='./release/'; tsc)"
  },
  "devDependencies": {
    "@types/node": "7.0.53",
    "@types/jest": "^22.1.1",
    "jest": "^22.1.4",
    "jest-cli": "^22.1.4",
    "ts-jest": "^22.0.2",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "typescript": "2.7.1"
  },
  "dependencies": {
    "avsc": "5.0.6",
    "request": "2.83.0",
    "request-promise": "4.2.2"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com:wishabi/Flipp-sr-enc-dec.git"
  },
  "jest": {
    "collectCoverage": true,
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/tests/.*|\\.test)\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  },
  "unmockedModulePathPatterns": [
    "<rootDir>/node_modules"
  ],
  "moduleDirectories": [
    "<rootDir>/node_modules",
    "<rootDir>/ts"
  ]
}
